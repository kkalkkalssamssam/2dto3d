<?xml version="1.0"?>
<launch>
  <node pkg="lidar_project" type="degree_finder" name="degree_finder" output="screen">
    <param name="serial_port_name" type="string" value="/dev/ttyUSB1"/>
    <param name="pub_topicname" type="string" value="/pcl_rviz"/>
    <param name="sub_topicname" type="string" value="/pcl_total"/>
  </node>

  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find lidar_project)/rviz/degree_config.rviz"  />

  <node pkg="rosbag" type="play" name="play" output="screen" args="/home/hkm/$(arg bag_filename).bag --wait-for-subscribers" />

</launch>
